import random

def get_player_choice():
    choices = ["water", "gun", "snake"]
    while True:
        choice = input("Enter your choice (water/gun/snake): ").lower()
        if choice in choices:
            return choice
        print("Invalid choice! Please choose water, gun, or snake.")

def get_computer_choice():
    return random.choice(["water", "gun", "snake"])

def determine_winner(player, computer):
    if player == computer:
        return "It's a tie!"
    elif (player == "water" and computer == "snake") or \
         (player == "snake" and computer == "gun") or \
         (player == "gun" and computer == "water"):
        return "You win!"
    else:
        return "Computer wins!"

def play_game():
    print("Welcome to Water, Gun, Snake!")
    print("Water beats Snake, Snake beats Gun, Gun beats Water.")
    
    while True:
        player_choice = get_player_choice()
        computer_choice = get_computer_choice()
        
        print(f"\nYou chose: {player_choice}")
        print(f"Computer chose: {computer_choice}")
        print(determine_winner(player_choice, computer_choice))
        
        play_again = input("\nPlay again? (yes/no): ").lower()
        if play_again != "yes":
            print("Thanks for playing!")
            break

if __name__ == "__main__":
    play_game()
